{% extends 'master.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="h-full flex items-center">

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-2/5 mx-auto">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="mb-3">
        <h1 class="font-bold text-xl">Please sign in</h1>

    </div>

    <div class="mb-3">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" autocomplete="email" required autofocus>
    </div>
    
        <div class="mb-3">
        <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" autocomplete="current-password" required>

    </div>
    

    <div class="mb-3">
        <input type="hidden" name="_csrf_token" class=""
           value="{{ csrf_token('authenticate') }}"
    >
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="bg-gray-100 hover:bg-gray-800 text-gray-800 hover:text-white font-bold py-2 px-4 rounded" type="submit">
        Sign in
    </button>
</form>
</div>
</section>


{% endblock %}
